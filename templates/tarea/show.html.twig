{% extends 'base.html.twig' %}

{% block title %}Tarea{% endblock %}

{% block body %}
    <h1>Tarea</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tarea.id }}</td>
            </tr>
            <tr>
                <th>Texto</th>
                <td>{{ tarea.texto }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{{ tarea.fecha ? tarea.fecha|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Finalizada</th>
                <td>{{ tarea.finalizada ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Visible</th>
                <td>{{ tarea.visible ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_tarea_index') }}">back to list</a>

    <a href="{{ path('app_tarea_edit', {'id': tarea.id}) }}">edit</a>

    {{ include('tarea/_delete_form.html.twig') }}
{% endblock %}
